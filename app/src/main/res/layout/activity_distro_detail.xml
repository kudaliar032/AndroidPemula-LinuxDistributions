<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Distro detail"
            android:orientation="vertical"
    >
        <ImageView
                android:id="@+id/img_detail_logo"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                tools:src="@android:color/darker_gray"
                android:layout_marginVertical="@dimen/detail_image_vertical_margin"
                android:layout_marginHorizontal="@dimen/detail_image_horizontal_margin"
        />

        <TextView
                android:id="@+id/tv_detail_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Distro name"
                android:textAlignment="center"
                android:layout_marginHorizontal="@dimen/detail_text_margin"
                android:textSize="24sp"
                android:textStyle="bold"
        />

        <TextView
                android:id="@+id/tv_detail_version"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Latest version"
                android:textAlignment="center"
                android:layout_marginHorizontal="@dimen/detail_text_margin"
        />

        <TextView
                android:id="@+id/tv_detail_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="@string/placeholder_description"
                android:layout_marginHorizontal="@dimen/detail_text_margin"
                android:layout_marginVertical="@dimen/detail_text_margin"
                android:textSize="16sp"
        />
    </LinearLayout>
</ScrollView>